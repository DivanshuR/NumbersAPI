<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divan.numbers.FeedbackActivity">

    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:layout_marginLeft="10dp" android:background="#43edffdd" android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="10dp" android:id="@+id/textView9" android:text="Feedback Form" android:textColor="@android:color/black" android:textSize="30sp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="40dp" android:text="@string/contact_form_name" android:textColor="@color/colorPrimary" android:textSize="18sp" android:paddingLeft="3dp" android:textAllCaps="true"/>

    <EditText android:layout_height="38dp" android:layout_width="fill_parent" android:layout_marginTop="10dp" android:id="@+id/your_name" android:textSize="14sp" android:layout_marginBottom="20dp" android:inputType="text" android:singleLine="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/textView8" android:text="@string/contact_form_email" android:textColor="@color/colorPrimary" android:textSize="18sp" android:paddingLeft="3dp" android:textAllCaps="true"/>

    <EditText android:layout_height="38dp" android:layout_width="fill_parent" android:layout_marginTop="10dp" android:id="@+id/your_email" android:textSize="14sp" android:layout_marginBottom="20dp" android:inputType="textEmailAddress" android:singleLine="true"/>

    <TextView android:layout_height="32dp" android:layout_width="fill_parent" android:text="@string/contact_form_message" android:textColor="@color/colorPrimary" android:textSize="18sp" android:paddingLeft="3dp" android:textAllCaps="true"/>

    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginTop="10dp" android:id="@+id/your_message" android:textSize="14sp" android:layout_marginBottom="20dp" android:inputType="textMultiLine" android:height="180dp" android:gravity="top"/>

        <Button
            android:id="@+id/post_message"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="1dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="1dp"
            android:text="@string/contact_form_button"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="13sp" />


    </LinearLayout>


</RelativeLayout>
